<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/countdownOrTimerActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="225dp"
    android:background="@drawable/shape_round_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        android:background="@color/red"-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/countdownOrTimerTabLayout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            app:tabIndicatorColor="#00FF00"

            app:tabIndicatorFullWidth="true"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#00FF00"
            app:tabTextColor="@color/black"
            app:tabTextAppearance="@style/MyTabLayout"/>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

<!--        <Button-->
<!--            android:id="@+id/tabTest"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="TabTest"/>-->

    </LinearLayout>

    <ImageView
        android:id="@+id/closeIV"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/close_selector"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="9dp"/>
</FrameLayout>
